{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Beautiful",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#bind"
		},
		{
			"include": "#tag"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.model.beau",
					"match": "\\b(model|load|save|find|order|by|from|where|between|like|first|last)\\b"
				},
				{
					"name": "keyword.control.join.beau",
					"match": "\\b(join|left|right|inner)\\b"
				},
				{
					"name": "keyword.control.operator.beau",
					"match": "\\d(and|or|async|await)\\b"
				},
				{
					"name": "constant.numeric.beau",
					"match": "-?\\b\\d+(\\.\\d+)?\\b"
				},
				{
					"name": "constant.language.boolean.beau",
					"match": "\\b(true|false)\\b"
				},
				{
					"name": "constant.language.type.beau",
					"match": "\\b(string|number|int|boolean|undefined|null)\\b"
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"name": "string.quoted.other.beau",
					"begin": "\\.\\.\\.",
					"end": "\\.\\.\\.",
					"patterns": [
						{
							"name": "string.quoted.template.beau",
							"begin": ",,",
							"end": ",,",
							"patterns": [
								{
									"include": "#keywords"
								},
								{
									"include": "#bind"
								}
							]
						}
					]
				},
				{
					"name": "string.quoted.other.beau",
					"begin": "`",
					"end": "`"
				},
				{
					"name": "string.quoted.double.beau",
					"begin": "\"",
					"end": "\""
				},
				{
					"name": "string.quoted.single.beau",
					"begin": "'",
					"end": "'"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.beau",
					"match": "\\.\\,(.*)"
				}
			]
		},
		"bind": {
			"patterns": [
				{
					"name": "entity.other.attribute-name.beau",
					"match": "(?!and|or|async|await)\\b[a-zA-Z0-9_]+(?:\\.[a-zA-Z0-9_]+)?\\b"
				},
				{
					"name": "keyword.operator.beau",
					"match": "\\.\\.(\\w+)",
					"captures": {
						"1": {
							"name": "variable.other.beau",
							"patterns": [
								{
									"include": "#keywords"
								},
								{
									"name": "variable.language.beau",
									"match": "\\b[a-zA-Z0-9_]+(?:\\.[a-zA-Z0-9_]+)?\\b",
									"scope": "variable.language"
								}
							]
						}
					}
				},
				{
					"name": "keyword.operator.type.beau",
					"match": "\\,\\,(\\w+)",
					"captures": {
						"1": {
							"name": "variable.other.beau",
							"patterns": [
								{
									"include": "#keywords"
								},
								{
									"name": "variable.language",
									"match": "\\b[a-zA-Z0-9_]+(?:\\.[a-zA-Z0-9_]+)?\\b",
									"scope": "variable.language"
								}
							]
						}
					}
				},
				{
					"name": "keyword.operator.arithmetic.beau",
					"match": "\\+|-|\\*|\\^|/|mod|plus|minus|times|divide|and|or"
				},
				{
					"name": "meta.function.arrow.beau",
					"begin": "\\(.*\\)\\s*=>\\s*{",
					"end": "}",
					"patterns": [
						{
							"include": "source.ts"
						}
					]
				}
			]
		},
		"tag.children": {
			"patterns": [
				{
					"include": "#keywords"
				},
				{
					"include": "#strings"
				},
				{
					"include": "#comments"
				},
				{
					"include": "#bind"
				},
				{
					"include": "#tag"
				}
			]
		},
		"tag": {
			"patterns": [
				{
					"name": "entity.name.tag.beau",
					"match": "\\.(?!w\\+)([^\\s]+)(\\n+)?(.*?)(\\n+)?(\\1)\\.",
					"captures": {
						"3": {
							"name": "attributes.beau",
							"patterns": [
								{
									"include": "#keywords"
								},
								{
									"include": "#strings"
								},
								{
									"include": "#comments"
								},
								{
									"include": "#bind"
								},
								{
									"include": "#tag.children"
								}
							]
						}
					}
				},
				{
					"name": "entity.name.tag.beau",
					"begin": "\\.(?!w\\+)([^\\s]+)\\s*$",
					"end": "\\1\\.",
					"patterns": [
						{
							"include": "#keywords"
						},
						{
							"include": "#strings"
						},
						{
							"include": "#comments"
						},
						{
							"include": "#bind"
						},
						{
							"include": "#tag.children"
						}
					]
				}
			]
		}
	},
	"shellVariables": {
		"TM_COMMENT_START": ".,"
	},
	"scopeName": "source.beau",
	"settings": {
		"foreground": "#f1fa8c"
	}
}