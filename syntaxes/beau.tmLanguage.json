{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Beau",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#declare"
		},
		{
			"include": "#html-full"
		},
		{
			"include": "#html"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.beau",
					"match": "\\b(if|while|for|return)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.beau",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.beau",
					"match": "\\\\."
				}
			]
		},
		"html": {
			"patterns": [
				{
					"name": "entity.name.tag.beau",
					"match": "\\.carosal (.*?) (\\1)\\.",
					"captures": {
						"1": {
							"name": "attributes.beau",
							"patterns": [{
								"include": "#declare"
							}]
						}
					}
				}

			]
		},
		"declare": {
			"patterns": [
				{
					"name": "comment.line.double-dash.beau",
					"match": "^,,\\s(.+)$"
				},
				{
					"name": "variable.other.beau",
					"match": "\\b[a-zA-Z_$][a-zA-Z0-9_$]*\\b"
				},
				{
					"name": "keyword.operator.assignment.beau",
					"match": "\\.\\."
				},
				{
					"name": "constant.language.boolean.beau",
					"match": "\\b(true|false)\\b"
				},
				{
					"name": "constant.numeric.beau",
					"match": "\\b-?\\d+(?:\\.\\d+)?\\b"
				},
				{
					"name": "string.unquoted.beau",
					"match": "\\b(?!\"[^\"\\\\]*(?:\\\\.[^\"\\\\]*)*\")(?!\\')\\b[a-zA-Z_$][a-zA-Z0-9_$]*\\b"
				},
				{
					"name": "string.quoted.single.beau",
					"begin": "'",
					"end": "'",
					"patterns": [
						{
							"name": "constant.character.escape.beau",
							"match": "\\\\."
						}
					]
				},
				{
					"name": "string.quoted.double.beau",
					"begin": "\"",
					"end": "\"",
					"patterns": [
						{
							"name": "constant.character.escape.beau",
							"match": "\\\\."
						}
					]
				},
				{
					"name": "string.quoted.other.beau",
					"match": "^\\.\\.\\s(.+)$",
					"captures": {
						"1": {
							"name": "punctuation.definition.comment.html"
						}
					}
				},
				{
					"name": "string.quoted.other.beau",
					"begin": "`",
					"end": "`",
					"patterns": [
						{
							"name": "constant.character.escape.beau",
							"match": "\\\\."
						}
					]
				},
				{
					"name": "string.other",
					"match": "\\b(?!\"[^\"\\\\]*(?:\\\\.[^\"\\\\]*)*\")(?!\\')\\b[a-zA-Z_$][a-zA-Z0-9_$]*\\b"
				}
			]
		}
	},
	"scopeName": "source.beau",
	"settings": {
		"foreground": "#f1fa8c"
	}
}