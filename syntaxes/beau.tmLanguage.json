{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Beautiful",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#bind"
		},
		{
			"include": "#tag"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.beau",
					"match": "\\b(sync)\\b"
				},
				{
					"name": "constant.numeric.beau",
					"match": "-?\\b\\d+(\\.\\d+)?\\b"
				},
				{
					"name": "constant.language.boolean",
					"match": "\\b(true|false)\\b"
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"name": "string.quoted.other.beau",
					"begin": "\\.\\.\\.",
					"end": "\\.\\.\\.",
					"patterns": [
						{
							"name": "string.quoted.template.beau",
							"begin": ",,",
							"end": ",,",
							"patterns": [
								{
									"include": "#keywords"
								},
								{
									"include": "#bind"
								}
							]
						}
					]
				},
				{
					"name": "string.quoted.other.beau",
					"begin": "`",
					"end": "`"
				},
				{
					"name": "string.quoted.double.beau",
					"begin": "\"",
					"end": "\""
				},
				{
					"name": "string.quoted.single.beau",
					"begin": "'",
					"end": "'"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.beau",
					"match": "\\.\\,(.*)"
				}
			]
		},
		"bind": {
			"patterns": [
				{
					"name": "entity.other.attribute-name.beau",
					"match": "\\b([a-zA-Z0-9_]+)\\b"
				},
				{
					"name": "keyword.operator.beau",
					"match": "\\.\\."
				}
			]
		},
		"tag.children": {
			"patterns": [
				{
					"include": "#keywords"
				},
				{
					"include": "#strings"
				},
				{
					"include": "#comments"
				},
				{
					"include": "#bind"
				},
				{
					"include": "#tag"
				}
			]
		},
		"tag": {
			"patterns": [
				{
					"name": "entity.name.tag.beau",
					"match": "\\.([^\\s]+)(\\n+)?(.*?)(\\n+)?(\\1)\\.",
					"captures": {
						"3": {
							"name": "attributes.beau",
							"patterns": [
								{
									"include": "#keywords"
								},
								{
									"include": "#strings"
								},
								{
									"include": "#comments"
								},
								{
									"include": "#bind"
								},
								{
									"include": "#tag.children"
								}
							]
						}
					}
				},
				{
					"name": "entity.name.tag.beau",
					"begin": "\\.([^\\s]+)\\s*$",
					"end": "\\1\\.",
					"patterns": [
						{
							"include": "#keywords"
						},
						{
							"include": "#strings"
						},
						{
							"include": "#comments"
						},
						{
							"include": "#bind"
						},
						{
							"include": "#tag.children"
						}
					]
				}
			]
		}
	},
	"shellVariables": {
		"TM_COMMENT_START": ".,"
	},
	"scopeName": "source.beau",
	"settings": {
		"foreground": "#f1fa8c"
	}
}